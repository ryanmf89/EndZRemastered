<configs>

<!--SCREAMER NAV-->
<append xpath="/nav_object_classes">				
<nav_object_class name="LLscreamerzombie">
<compass_settings>
	<property name="sprite_name" value="ui_game_symbol_zombie"/>
	<property name="min_distance" value="2"/>
	<property name="max_distance" value="30"/>
	<property name="color" value="255,0,220,255"/><!--PINK-->
	<property name="has_pulse" value="true"/>
	<property name="icon_clamped" value="false"/>
</compass_settings>
</nav_object_class>
</append>

